  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{__('Blockchain MN')}
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(class={active: page === 'hash'})
              a(href='/hash') #{__('Hasz')}
            li(class={active: page === 'block'})
              a(href='/block') #{__('Blok')}
            li(class={active: page === 'blockchain'})
              a(href='/blockchain') #{__('Ciąg bloków')}
            li(class={active: page === 'distributed'})
              a(href='/distributed') #{__('Rozpowszechnianie')}
            li(class={active: page === 'tokens'})
              a(href='/tokens') #{__('Tokeny')}
            li(class={active: page === 'coinbase'})
              a(href='/coinbase') #{__('Pieniędzne tr.')}
            li.nav-item(class={active: page === 'keys'})
              a.nav-link(href='/keys') #{__('Klucze')}
            li.nav-item(class={active: page === 'signatures'})
              a.nav-link(href='/signatures') #{__('Sygnatury')}
            li.nav-item(class={active: page === 'transaction'})
              a.nav-link(href='/transaction') #{__('Transakcje')}
            li.nav-item(class={active: page === 'blockchainwithsignatures'})
              a.nav-link(href='/blockchainwithsignatures') #{__('Ciąg bloków z podpisami')}
    

    block content
